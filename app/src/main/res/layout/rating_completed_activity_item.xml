<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_general">

    <RelativeLayout
        android:id="@+id/confirmLayoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_general"
        android:layout_marginLeft="@dimen/margin_general"
        android:layout_marginRight="@dimen/margin_general"
        android:layout_marginTop="100dp"
        android:background="@drawable/confirm_view"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/personImage_copy"
            android:layout_width="150dip"
            android:layout_height="130dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/add_dependent"
            android:visibility="invisible" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personImage_copy">

            <TableRow android:gravity="center">

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/TextViewSmallStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_general"
                    android:layout_marginRight="@dimen/margin_general"
                    android:gravity="center"
                    android:padding="@dimen/padding_general"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:gravity="center">

                <TextView
                    android:id="@+id/dateTimeRating"
                    style="@style/TextViewSmallStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_general"
                    android:textColor="@color/colorBlackDark"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:gravity="center">

                <TextView
                    android:id="@+id/feedBack"
                    style="@style/TextViewSmallStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_general"
                    android:padding="@dimen/padding_general"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:gravity="center">

                <TextView
                    style="@style/HeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_general"
                    android:layout_marginLeft="@dimen/margin_general"
                    android:layout_marginRight="@dimen/margin_general"
                    android:padding="@dimen/padding_general"
                    android:text="@string/rating" />

                <ImageView
                    android:id="@+id/smileyImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

            </TableRow>

        </TableLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/personImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />
</RelativeLayout>
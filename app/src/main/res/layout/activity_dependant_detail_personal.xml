<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<include layout="@layout/header_white"
    android:id="@+id/include" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/searchView"
            android:background="@drawable/edit_text"
            android:layout_marginTop="40dp"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true"
            />


        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_image_view"
            android:src="@mipmap/camera_icon"
            android:id="@+id/imageButtonCamera"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@mipmap/person_icon_32"
            android:inputType="textPersonName"
            android:hint="Dependant Name"
            android:id="@+id/editDependantName"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@mipmap/receiver_icon_32"
            android:inputType="number"
            android:hint="1234567890"
            android:id="@+id/editContactNo"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@mipmap/address_icon_32"
            android:inputType="textPostalAddress"
            android:hint="Address"
            android:id="@+id/editAddress"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@mipmap/heart_icon_32"
            android:inputType="text"
            android:hint="Mother"
            android:id="@+id/editRelation"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Continue"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_success"
            android:id="@+id/buttonContinue"
            android:onClick="goToDependantMedicalData"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/edit_text_margin"
            android:layout_marginLeft="@dimen/edit_text_margin"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</ScrollView>

</LinearLayout>
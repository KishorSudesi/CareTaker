<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/includeDashboardList"
        layout="@layout/header_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/includeDashboardList"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <include
        android:id="@+id/includeDashboardList"
        layout="@layout/subheader_activity_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_activities"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <!--<include
        android:id="@+id/includeFooterMenu"
        layout="@layout/dashboard_footer_menu"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0" />-->
</LinearLayout>



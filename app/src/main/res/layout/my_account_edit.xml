<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="74dp"
                android:background="@drawable/my_account_white">


                <TextView
                    android:id="@+id/textView18"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/textViewEmail"
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView18"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/mail_icon_32"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorBlackDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/editTextGuruName"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/person_icon"
                        android:drawablePadding="15dp"
                        android:drawableStart="@drawable/person_icon"
                        android:hint="@string/name"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlackDark" />

                    <EditText
                        android:id="@+id/editDob"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/edit_text_margin"
                        android:layout_marginRight="@dimen/edit_text_margin"
                        android:layout_marginTop="25dp"
                        android:drawableLeft="@drawable/activity_icon_32"
                        android:drawablePadding="10dp"
                        android:focusableInTouchMode="false"
                        android:hint="@string/DOB"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@color/colorBlackDark" />
                    <!--
                                    <EditText
                                        android:id="@+id/editTextCity"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="25dp"
                                        android:background="@drawable/edit_text"
                                        android:drawableLeft="@drawable/address_icon"
                                        android:drawablePadding="15dip"
                                        android:drawableStart="@drawable/address_icon"
                                        android:hint="@string/address"
                                        android:paddingLeft="10dp" />-->


                    <!-- <EditText
                         android:id="@+id/editTextNumber"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginLeft="10dp"
                         android:layout_marginRight="10dp"
                         android:layout_marginTop="25dp"
                         android:background="@drawable/edit_text"
                         android:drawableLeft="@drawable/receiver_icon"
                         android:drawablePadding="15dp"
                         android:drawableStart="@drawable/receiver_icon"
                         android:hint="@string/number"
                         android:inputType="number"
                         android:maxLength="10"
                         android:paddingLeft="10dp" />-->

                    <Spinner
                        android:id="@+id/input_citizenship"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/edit_text_margin"
                        android:layout_marginRight="@dimen/edit_text_margin"
                        android:layout_marginTop="25dp"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:id="@+id/radioMobile"
                            style="@style/RadioButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mobile"
                            android:textColor="@color/colorBlackDark" />

                        <RadioButton
                            android:id="@+id/radioLandline"
                            style="@style/RadioButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/landline"
                            android:textColor="@color/colorBlackDark" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/editCountryCode"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/edit_text_margin"
                            android:layout_marginRight="@dimen/edit_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.4"
                            android:drawablePadding="10dp"
                            android:enabled="false"
                            android:hint="@string/country_code"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/colorBlackDark" />

                        <EditText
                            android:id="@+id/editAreaCode"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/edit_text_margin"
                            android:layout_marginRight="@dimen/edit_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.5"
                            android:drawablePadding="10dp"
                            android:hint="@string/area_code"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="10dp"
                            android:textColor="@color/colorBlackDark" />

                        <EditText
                            android:id="@+id/editContactNo"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/edit_text_margin"
                            android:layout_marginRight="@dimen/edit_text_margin"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1.1"
                            android:drawablePadding="10dp"
                            android:hint="@string/contact_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="10dp"
                            android:textColor="@color/colorBlackDark" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonSaveSetting"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.55"
                        android:background="@drawable/button_success"
                        android:text="@string/save_text"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle" />

            <RelativeLayout
                android:id="@+id/loadingPanel"
                style="@style/GenericProgressBackground"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignStart="@+id/imageView5"
                android:visibility="gone">

                <ProgressBar style="@style/GenericProgressIndicator" />
            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
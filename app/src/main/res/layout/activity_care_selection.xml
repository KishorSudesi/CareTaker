<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/ppl_bg"
        android:id="@+id/imageBg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.7"
        android:background="@drawable/gradient_bg_selection"
        android:layout_alignBottom="@+id/imageBg"
        android:layout_alignParentTop="true">

    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="A Loved One"
        android:id="@+id/buttonLovedOne"
        android:background="@drawable/button_white"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="selectedLovedOne"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Who Needs Care ?"
        android:id="@+id/textView2"
        android:layout_above="@+id/buttonLovedOne"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="My Self"
        android:padding="4dp"
        android:id="@+id/button2"
        android:background="@drawable/button_white"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:layout_alignParentStart="true"
        android:onClick="selectedMyself"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />


</RelativeLayout>

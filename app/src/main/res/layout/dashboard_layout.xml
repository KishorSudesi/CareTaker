<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/dpndntCarousel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/includeDashboardList"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <include
        android:id="@+id/includeDashboardList"
        layout="@layout/dashboard_activity_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <include
        android:id="@+id/includeFooterMenu"
        layout="@layout/dashboard_footer_menu"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0" />

</LinearLayout>
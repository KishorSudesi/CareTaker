<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/includeDashboardList"
        layout="@layout/header_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/includeDashboardList"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <include
        android:id="@+id/includeDashboardList"
        layout="@layout/personal_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <include
        android:id="@+id/includeFooterMenu"
        layout="@layout/dashboard_footer_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0" />

</LinearLayout>
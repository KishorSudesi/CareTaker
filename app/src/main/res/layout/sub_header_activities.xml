<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/transprant_btn"
    android:orientation="vertical"
    android:padding="@dimen/padding_general">

    <Button
        android:id="@+id/buttonActivity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@drawable/button_back_trans"
        android:text="List"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="@drawable/transprant_btn"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageView android:id="@+id/prevMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_general"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_general"
            android:src="@drawable/calendar_left_arrow_selector"/>

        <TextView android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="@dimen/margin_general"
            android:gravity="center"
            android:padding="@dimen/padding_general"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView android:id="@+id/nextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_general"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_general"
            android:src="@drawable/calendar_right_arrow_selector"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/addActivity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/header"
        android:layout_marginRight="8dp"
        android:src="@drawable/add_icon" />

</RelativeLayout>


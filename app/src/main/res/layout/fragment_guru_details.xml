    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hdfc.views.RoundedImageView
                android:id="@+id/imageButtonCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/camera_icon" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/person_icon"
                android:drawablePadding="10dp"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/mail_icon"
                android:drawablePadding="10dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editDOB"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/activity_icon_32"
                android:drawablePadding="10dp"
                android:focusableInTouchMode="false"
                android:hint="@string/DOB"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/pass_icon"
                android:drawablePadding="10dp"
                android:hint="*****"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/pass_icon"
                android:drawablePadding="10dp"
                android:hint="*****"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/address_icon"
                android:drawablePadding="10dp"
                android:hint="@string/address"
                android:inputType="text"
                android:padding="10dp" />

            <Spinner
                android:id="@+id/input_citizenship"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="25dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/address_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/radioMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile" />

                <RadioButton
                    android:id="@+id/radioLandline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LandLine" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <EditText
                    android:id="@+id/editCountryCode"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/edit_text_margin"
                    android:layout_marginRight="@dimen/edit_text_margin"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text"
                    android:drawablePadding="10dp"
                    android:enabled="false"
                    android:hint="@string/country_code"
                    android:inputType="number"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/editAreaCode"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/edit_text_margin"
                    android:layout_marginRight="@dimen/edit_text_margin"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edit_text"
                    android:drawablePadding="10dp"
                    android:hint="@string/area_code"
                    android:inputType="number"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/editContactNo"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/edit_text_margin"
                    android:layout_marginRight="@dimen/edit_text_margin"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.1"
                    android:background="@drawable/edit_text"
                    android:drawablePadding="10dp"
                    android:hint="@string/contact_number"
                    android:inputType="number"
                    android:padding="10dp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginTop="35dp"
                android:background="@drawable/button_success"
                android:onClick="validateUser"
                android:text="@string/string_continue"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>


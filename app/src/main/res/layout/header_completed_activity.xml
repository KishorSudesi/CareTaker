<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/header_border"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButtonDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:onClick="backToDashboard"
                android:padding="@dimen/padding_general"
                android:src="@mipmap/person_icon" />

            <ImageButton
                android:id="@+id/imageButtonVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:onClick="backToDashboard"
                android:padding="@dimen/padding_general"
                android:src="@mipmap/video_icon" />

            <ImageButton
                android:id="@+id/imageButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@mipmap/img_icon" />

            <ImageButton
                android:id="@+id/imageButtonRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@mipmap/smiley_icon" />

            <ImageButton
                android:id="@+id/imageButtonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@mipmap/add_icon" />

        </TableRow>

    </TableLayout>

</RelativeLayout>


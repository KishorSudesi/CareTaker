<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/header_border"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButtonDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:onClick="backToDashboard"
                android:padding="@dimen/padding_general"
                android:src="@drawable/person_icon" />

            <ImageButton
                android:id="@+id/imageButtonMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:onClick="backToDashboard"
                android:padding="@dimen/padding_general"
                android:src="@drawable/activity_icon_32" />

            <ImageButton
                android:id="@+id/imageButtonVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:onClick="backToDashboard"
                android:padding="@dimen/padding_general"
                android:src="@drawable/play_icon_32" />

            <ImageButton
                android:id="@+id/imageButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@drawable/img_icon_32" />

            <ImageButton
                android:id="@+id/imageButtonRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@drawable/smiley_icon_32" />

            <ImageButton
                android:id="@+id/imageButtonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@drawable/button_back_trans"
                android:padding="@dimen/padding_general"
                android:src="@drawable/notes_icon" />

        </TableRow>

    </TableLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_white"
        android:id="@+id/include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:id="@+id/editAge"
                android:background="@drawable/edit_text"
                android:drawableLeft="@mipmap/person_icon_32"
                android:hint="Age"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/editDiseases"
                android:hint="Any Major Illness"
                android:background="@drawable/edit_text"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/steth_icon_32"
                android:inputType="textMultiLine"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:lines="8"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:scrollbarStyle="insideInset"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/editNotes"
                android:hint="Note for Caregivers"
                android:background="@drawable/edit_text"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/notes_icon_32"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:lines="8"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:scrollbarStyle="insideInset"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_success"
                android:id="@+id/buttonContinue"
                android:onClick="gotoSignupListDependants"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/edit_text_margin"
                android:layout_marginLeft="@dimen/edit_text_margin"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
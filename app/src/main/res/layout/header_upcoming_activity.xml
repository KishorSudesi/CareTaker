<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/header_border"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/buttonMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_general"
        android:background="@drawable/add_msg"
        android:src="@drawable/notes_icon" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:padding="@dimen/text_padding"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:text="@string/upcoming_activity"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <ImageButton
        android:id="@+id/buttonCallUpcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonMsg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_back_trans"
        android:src="@drawable/receiver_icon" />



</RelativeLayout>

